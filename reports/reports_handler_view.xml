<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="dts.menu_dts_document_reports"
              name="Reports"
              parent="dts.menu_dts_root"
              sequence="400"
              groups="dts.group_dts_document_user"/>

        <record id="monthlyreport_handler_view_form" model="ir.ui.view">
            <field name="name">Monthly Report</field>
            <field name="model">monthlyreport.handler</field>
            <field name="arch" type="xml">
                <form string="Monthly Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>

                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="department_id" required="True" widget="selection"/>
                                <field name="tracking_type"  widget="radio" />
                                <field name="outgoing_state" attrs="{'invisible':[('tracking_type','=','incoming')]}"/>
                                <field name="incoming_state" attrs="{'invisible':[('tracking_type','=','outgoing')]}"/>
                                <field name="document_type_id"/>
                            </group>
                        </group>
                        

                        <footer>
                            <button name="print_monthly_report"
                                        string="Print"
                                        type="object"
                                        class="btn-primary"/>

                            <button string="Cancel" special="cancel" class="btn-default"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="monthlyreport_handler_view_action" model="ir.actions.act_window">
            <field name="name">Monthly Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">monthlyreport.handler</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
			<field name="target">new</field>
        </record>

        <menuitem id="monthlyreport_handler_id" action="monthlyreport_handler_view_action"
                  parent="dts.menu_dts_document_reports" name="Monthly Report" sequence="1"/>

    </data>
</odoo>